
@model Vidly.Models.Customer
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    <table ="table table-bordered table-hover">
        <thead>
            All Customers
        </thead>

            <tr><th>Name</th></tr>
                
        @foreach(var obj in Model)
        {
            <tr>
                <td>@Html.ActionLink(obj.Name, "GetCustomer", "Customer", new { id = obj.ID})</td>
            </tr>    
        }
               
    </table>
}

